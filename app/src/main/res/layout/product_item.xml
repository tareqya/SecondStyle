<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="260dp"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    >
    <RelativeLayout
        android:id="@+id/product_RL_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_IMG_icon"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp"
            android:src="@drawable/dress_1"
            android:scaleType="fitXY"
            />

        <TextView
            android:paddingHorizontal="5dp"
            android:id="@+id/product_TV_size"
            android:text="T-Shirt"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/product_IMG_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/product_TV_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_TV_size"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"

            android:layout_marginBottom="10dp"
            android:text="39.00"
            android:textColor="#dd3d00"
            android:textSize="20sp" />

        <Button
            android:id="@+id/product_BTN_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#dd3d00"
            android:text="Add+"
            android:layout_below="@+id/product_TV_price"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>